<h1><%= @topic.name %></h1>

<% if policy(@topic).update? %>
	<%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.description %></p>
    
      <%= render @posts %>

   </div>
   <div class="col-md-4">
     <% if policy(Post.new).create? %> <!--if policy allows user to create new Posts then...-->
       <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
     <% end %>

     <% if policy(@topic).destroy? %>
       <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic'} %>
     <% end %>

   </div>

   <br><br>
   <div class="col-md-4">
     <!--This is were the show posts summaries link will go
     It should link to the summaries index.html.erb page-->
     <%= link_to "Post Summaries", summary_index_path, class: 'btn btn-success' %>
  </div>
 </div> 
  <%= will_paginate @posts %>             	
