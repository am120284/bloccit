<h1>Edit Summary</h1>

<div class="row">
  <div class="col-md-4">
    <p>Write a small description of your post</p>
  </div>
  <div class="col-md-8">
    <%= form_for @summary do |s| %>
      
        <div class="form-group">
          <%= s.label :description %>
          <%= s.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter Summary body" %>
        </div>
        <div class="form-group">
          <%= s.submit "Save", class: 'btn btn-success' %>
        </div>
    <% end %>
  </div>
</div>